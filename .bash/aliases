# Ruby Dev
alias b="bundle --jobs 4"
alias be="bundle exec"

# Bash
alias bash_refresh="source ~/.bash_profile"

# Git
alias g="git"
#alias gd="git diff --color | diff-so-fancy  | less --tabs=4 -RFX"
alias gsco="stash_and_checkout"
alias grebasesafe="git fetch --tags && git rebase last-successful-build"
alias gg="git grep"

# System
alias cc="clear"
alias ll="ls -l"
alias all="ls -al"

# Directory Navigation
alias ..="cd .."
alias ...="cd ../.."
alias dot="cd ~/dotfiles"
alias dev="cd ~/dev"
