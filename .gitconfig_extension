[alias]
  a = add
  aa = add --all
  amend = commit --amend
  co = checkout
  com = checkout master
  cmm = commit --verbose
  d = 'diff --color | diff-so-fancy | less --tabs=4 -RFX'
  g = grep
  l = log --pretty=format:'%Cred%h%Creset @ %Cgreen%cr%Creset: %s %C(bold)%d%Creset %C(bold blue)<%an>%Creset' --abbrev-commit
  pom = pull origin master
  sh = show --name-only
  st = status -sb
  rug = stash
  fpush = push --force-with-lease
  pushus = push --set-upstream origin

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = yellow
  changed = red
  untracked = cyan bold

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[push]
  default = simple
[core]
  excludesfile = /Users/amaal.ali/.gitignore_global
