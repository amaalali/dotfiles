[core]
    hooksPath = ~/.githooks
    excludesfile = ~/.gitignore
    pager = delta

[init]
  defaultBranch = main

[alias]
    a = add
    aa = add --all
    amend = commit --amend --no-edit
    amendedit = commit --amend
    b = branch
    cm = commit --verbose
    cmm = commit --verbose -m
    co = checkout
    cp = cherry-pick
    d = diff
    djs = diff -- . ':(exclude)package-lock.json'
    dts = diff -- . ':!package-lock.json'
    g = grep
    l = log --pretty=format:'%Cred%h%Creset @ %Cgreen%cr%Creset: %s %C(bold)%d%Creset %C(bold blue)<%an>%Creset' --abbrev-commit
    sh = show --name-only
    sm = switch main
    st = status -sb
    staged = diff --staged
    rug = stash
    s = switch
    pushf = push --force-with-lease
    fixup = commit --fixup
    fixup-run = rebase --interactive --autosquash
    w = worktree
    yeet = push
    yeet-yolo = push --force-with-lease

[pull]
    rebase = false

[push]
    default = simple
    autoSetupRemote = true

[commit]
	gpgsign = true

[delta]
    line-numbers = true
    side-by-side = true
    navigate = true  # use n and N to move between diff sections

[interactive]
    diffFilter = delta --color-only

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = yellow
    changed = red
    untracked = cyan bold

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
