[include]
  path = .my_git_info/info

[alias]
  a = add
  aa = add --all
  co = checkout
  com = checkout master
  cmm = commit
  d = diff --color | diff-so-fancy  | less --tabs=4 -RFX
  g = grep
  l = log --pretty=format:'%Cred%h%Creset @ %Cgreen%cr%Creset: %f %C(bold)%d%Creset %C(bold blue)<%an>%Creset' --abbrev-commit
  pom = pull origin master
  sh = show --name-only
  st = status -sb
  rug = stash

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = yellow
  changed = red
  untracked = cyan bold

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[push]
  default = simple
