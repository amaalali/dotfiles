# Git
alias g="git"
alias gsco="stash_and_checkout"
alias grebasesafe="git fetch --tags && git rebase last-successful-build"
alias gg="git grep"

# System
alias cc="clear"

# List Directory Contents shortcuts
alias ll="echo 'Invalid command. Try ls, lsl/lslf, lss/lssf, '"

alias lsl="ls -al"
alias lslf="ls -1al | fzf"

alias lss="ls -1"
alias lssf="ls -1a | fzf"

# Directory Navigation
alias ..="cd .."
alias ...="cd ../.."
alias dotfiles='cd $MY_DOTFILES_DIR'

# For cli programs
alias scli="scala-cli"

# 
alias pn=pnpm
